<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="800.0" prefHeight="600.0" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.igo.iGoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="iGo" style="-fx-font-size: 48pt; -fx-font-weight: bold;" />

    <HBox spacing="10.0" alignment="CENTER">
        <Label text="First Name:"/>
        <TextField fx:id="Signup_TextField1"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Last Name"/>
        <TextField fx:id="Signup_TextField2"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Email Address:"/>
        <TextField fx:id="Signup_TextField3"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Password:"/>
        <TextField fx:id="Signup_TextField4"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Register" onAction="#onRegisterButtonClick"/>
        <Button text="Cancel" onAction="#onSignUpCancelButtonClick"/>
    </HBox>
</VBox>
