<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<VBox prefWidth="800.0" prefHeight="600.0" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.igo.iGoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="iGo" style="-fx-font-size: 48pt; -fx-font-weight: bold;" />

    <Label text="Select Ticket type"></Label>
    <HBox alignment="CENTER" spacing="20.0">
        <ComboBox fx:id="fareTypesComboBox" promptText="Select a fare type" />
        <ComboBox fx:id="ticketTypesComboBox" promptText="Select a ticket type" />
        <Label fx:id="amount" text="0"></Label>
    </HBox>
    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Cancel" onAction="#onCancelButtonClick"/>
        <Button text="Logout" onAction="#onLogoutButtonClick"/>
    </HBox>

</VBox>
