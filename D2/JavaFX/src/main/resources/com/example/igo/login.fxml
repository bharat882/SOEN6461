<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox prefWidth="800.0" prefHeight="600.0" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.igo.iGoController">
    <padding>
        <Insets top="50" bottom="50" left="100" right="100" />
    </padding>

    <Label text="iGo" style="-fx-font-size: 32pt; -fx-font-weight: bold; -fx-text-fill: #2196F3;" />

    <GridPane vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="100" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10" prefHeight="30" />
            <RowConstraints minHeight="10" prefHeight="30" />
        </rowConstraints>

        <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>

    <Button text="Login"  onAction="#onSignInButtonClick" prefWidth="100" style="-fx-font-size: 14pt; -fx-background-color: #2196F3; -fx-text-fill: white;" />

</VBox>